# PATH: .env.example
# Copy this file to ".env" for local/dev. NEVER commit real secrets.

# -----------------------------
# Core Django
# -----------------------------
DEBUG=True
SECRET_KEY=dev-insecure-change-me

# Optional but recommended
TIME_ZONE=UTC

# -----------------------------
# Hosts / Security
# -----------------------------
# Comma-separated
ALLOWED_HOSTS=localhost,127.0.0.1

# -----------------------------
# Database
# -----------------------------
# Examples:
# SQLite (default): sqlite:///absolute/path/to/db.sqlite3
# Postgres: postgres://USER:PASSWORD@HOST:5432/DBNAME
DATABASE_URL=sqlite:///db.sqlite3

# -----------------------------
# CORS / CSRF (Frontend)
# -----------------------------
# Comma-separated
CORS_ALLOWED_ORIGINS=http://localhost:5173
CSRF_TRUSTED_ORIGINS=http://localhost:5173

# -----------------------------
# Paystack (Phase 4)
# -----------------------------
# Do not commit real keys. Set these in deployment env.
PAYSTACK_PUBLIC_KEY=
PAYSTACK_SECRET_KEY=

# Optional: where Paystack redirects the user after payment
# Typically your frontend route, e.g.:
# https://your-frontend.com/store/<storeId>/payment/callback
PAYSTACK_CALLBACK_URL=